rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only the signed-in user can read/write their own saved designs.
    // Path: users/{userId}/savedDesigns/{savedDesignId}
    match /users/{userId}/savedDesigns/{savedDesignId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // All other paths are denied (Firestore denies when no rule matches).
  }
}

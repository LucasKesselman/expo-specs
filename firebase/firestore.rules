rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Only the signed-in user can read/write their own saved designs.
    // Path: users/{userId}/savedDesigns/{savedDesignId}
    match /users/{userId}/savedDesigns/{savedDesignId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    // Signed-in users can read and create designs (Create Design on Account).
    match /Designs/{designId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
    // Signed-in users can read and create garments (Create Garment on Account).
    match /Garments/{garmentId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null;
    }
  }
}
